    "@types/node": "^14.0.20",
    "babel-jest": "^26.0.1",
    "jest": "^26.0.1",
    "prettier": "^2.0.5",
    "ts-jest": "^26.0.0",
    "tslint": "^6.1.2",
    "typedoc": "^0.17.7",
    "typedoc-plugin-markdown": "^2.2.17",
