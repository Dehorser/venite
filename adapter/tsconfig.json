{
  "compilerOptions": {
    "incremental": true,
    "target": "es6",
    "module": "es6",
    "strict": true,
    "strictPropertyInitialization": false,
    "lib": ["dom", "es6", "es2017", "es2019"],
    "declaration": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "tests", "docs"]
}
